{
  "name": "void",
  "version": "0.0.1",
  "description": "Void desc",
  "author": "Abdulrahman Falyoun, Moutasem Habboub",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "export NODE_ENV=production; node dist/main",
    "start:dev": "export NODE_ENV=development; nest start --watch",
    "start:staging": "export NODE_ENV=staging; nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "heroku:logs": "heroku logs --tail",
    "heroku:push": "git push heroku main",
    "db:push": "prisma db push  --schema src/app-prisma/prisma/schema.prisma",
    "db:pull": "prisma db pull --schema src/app-prisma/prisma/schema.prisma",
    "db:generate": "prisma  generate --schema src/app-prisma/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.1.0",
    "@nestjs/cli": "^9.1.4",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.1.2",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.2.1",
    "@nestjs/swagger": "^6.1.2",
    "@prisma/client": "^4.9.0",
    "@nestjs/websockets": "^9.2.1",
    "@sentry/node": "^7.13.0",
    "apollo-server-express": "^3.10.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cls-hooked": "^4.2.2",
    "codecs-sdk": "^0.2.2",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.6.0",
    "handlebars": "^4.7.7",
    "html-pdf": "^3.0.1",
    "joi": "^17.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.1",
    "nest-cli": "^0.0.5",
    "reflect-metadata": "^0.1.13",
    "request-context": "^2.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "~4.30.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "~2.24.2",
    "eslint-plugin-import-helpers": "~1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "eslint-plugin-unicorn": "~35.0.0",
    "husky": "^8.0.3",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "prisma": "^4.9.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./husky/pre-commit",
      "pre-push": "./.husky/pre-push $HUSKY_GIT_STDIN"
    }
  },
  "lint-staged": {
    "*.(ts)": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
